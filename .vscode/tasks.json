{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "group": "build",
            "command": "python stassh.py"
        },
        {
            "label": "clean",
            "type": "shell",
            "group": "build",
            "command": "git clean -dfx -e .venv"
        },
        {
            "label": "generate Git SHA",
            "type": "shell",
            "group": "build",
            "command": "git rev-parse --short=8 HEAD > resources/GIT_SHA"
        },
        {
            "label": "publish",
            "type": "shell",
            "group": "build",
            "command": "pyinstaller --onefile --noconsole --add-data \"resources;resources\" --icon=resources/logo.ico stassh.py"
        },
        {
            "label": "compile installer",
            "type": "shell",
            "group": "build",
            "command": "docker run --rm -v .:/work amake/innosetup:innosetup6 installer/installer.iss"
        },
        {
            "label": "publish & compile installer",
            "group": "build",
            "dependsOn": [
                "clean",
                "generate Git SHA",
                "publish",
                "compile installer"
            ],
            "dependsOrder": "sequence"
        }
    ]
}
